    <!-- Feature Cards -->
    <section class="feature-cards">
        <div class="container">
            <div class="cards-grid">
                <div class="feature-card hoverable" data-feature="consultation">
                    <div class="card-icon">
                        <i class="fas fa-video"></i>
                    </div>
                    <h3 data-translate="cards.consultation.title">Video Consultation</h3>
                    <p data-translate="cards.consultation.desc">Connect with experienced doctors through secure video
