    <!-- Chatbot -->
    <div class="chatbot-container" id="chatbotContainer">
        <div class="chatbot-header">
            <div class="chatbot-avatar">
                <i class="fas fa-robot"></i>
            </div>
            <div class="chatbot-info">
                <h4 data-translate="chatbot.title">MediBot Assistant</h4>
                <span data-translate="chatbot.status">Online</span>
            </div>
            <button class="chatbot-close" id="closeChatbot">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="chatbot-messages" id="chatbotMessages">
            <div class="message bot-message">
                <p data-translate="chatbot.welcome">Hello! I'm MediBot. How can I help you today?</p>
            </div>
        </div>
        <div class="chatbot-input">
            <input type="text" id="chatbotInput" placeholder="Type your message..."
                data-translate-placeholder="chatbot.placeholder">
            <button id="sendMessage">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>

    <button class="chatbot-trigger" id="chatbotTrigger">
        <i class="fas fa-comments"></i>
    </button>

    <!-- Modals -->
    <div class="modal" id="loginModal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="login-form">
                <h3 id="loginTitle">Login</h3>
                <form id="loginForm">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" required>
                    </div>
                    <button type="submit" class="btn-primary">Login</button>
                </form>
                <p class="register-link">Don't have an account? <a href="#" id="registerLink">Register here</a></p>
            </div>
        </div>
    </div>

