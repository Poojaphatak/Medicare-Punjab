<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Doctor Login</title>

  <!-- Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <style>
    /* Background gradient similar to your homepage */
    body {
      background: linear-gradient(135deg, #e6f0fa 0%, #cde0f7 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: "Segoe UI", Tahoma, sans-serif;
    }

    .login-card {
      background-color: #ffffffcc; /* slight transparency */
      border: none;
      border-radius: 1.2rem;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .login-header {
      background: #1d6ae5; /* deep blue to match buttons */
      color: #fff;
      border-top-left-radius: 1.2rem;
      border-top-right-radius: 1.2rem;
      text-align: center;
      padding: 1.5rem;
    }

    .btn-primary {
      background-color: #1d6ae5;
      border-color: #1d6ae5;
    }
    .btn-primary:hover {
      background-color: #1554b8;
      border-color: #1554b8;
    }

    label {
      font-weight: 500;
    }
  </style>
</head>
<body>


  <div class="container mt-5 mb-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <div class="card login-card">
          <div class="login-header">
            <h3 class="mb-0">Doctor SignUp</h3>
          </div>
          <div class="card-body p-4">
            <form action="/doctor/login" method="POST" enctype="multipart/form-data">
              
              <!-- Name -->
              <div class="mb-3">
                <label for="doctorName" class="form-label">Name (Banking Name)</label>
                <input type="text" class="form-control" id="doctorName" name="doctorName"
                       placeholder="Enter your full banking name" required>
              </div>

              <!-- Age -->
              <div class="mb-3">
                <label for="age" class="form-label">Age</label>
                <input type="number" class="form-control" id="age" name="age" min="21" max="100"
                       placeholder="Enter your age" required>
              </div>

              <!-- Aadhar -->
              <div class="mb-3">
                <label for="aadhar" class="form-label">Aadhar Card Number</label>
                <input type="text" class="form-control" id="aadhar" name="aadhar" maxlength="12"
                       placeholder="12-digit Aadhar number" required>
              </div>

              <!-- otp -->
              <div class="mb-3">
                <label for="aadhar-otp" class="form-label">Enter OTP</label>
                <input type="number" class="form-control" id="aadhar-otp" name="aadhar-otp" maxlength="6"
                       placeholder="Enter 6 digit OTP" required>
              </div>

              <!-- State -->
              <div class="mb-3">
                <label for="state" class="form-label">State of License Issue</label>
                <select class="form-select" id="state" name="state" required>
                  <option value="" disabled selected>Select State</option>
                  <option>Andhra Pradesh</option>
                  <option>Delhi</option>
                  <option>Maharashtra</option>
                  <option>Karnataka</option>
                  <option>Tamil Nadu</option>
                  <!-- Add more states as needed -->
                </select>
              </div>

              <!-- License Number -->
              <div class="mb-3">
                <label for="licenseNumber" class="form-label">Doctor's License Number</label>
                <input type="text" class="form-control" id="licenseNumber" name="licenseNumber"
                       placeholder="Enter license number" required>
              </div>

              <!-- Upload License Photo -->
              <div class="mb-3">
                <label for="licensePhoto" class="form-label">Upload Photocopy of Doctor's License</label>
                <input class="form-control" type="file" id="licensePhoto" name="licensePhoto"
                       accept="image/*,application/pdf" required>
              </div>

              <!-- Upload Cancelled Check -->
              <div class="mb-4">
                <label for="cancelledCheck" class="form-label">Upload Cancelled Cheque with signature on it</label>
                <input class="form-control" type="file" id="cancelledCheck" name="cancelledCheck"
                       accept="image/*,application/pdf" required>
              </div>

              <!--bank name -->

              <!-- upload e-signature -->
              <div class="mb-4">
                <label for="e-signature" class="form-label">Upload e-signature</label>
                <input class="form-control" type="file" id="e-signature" name="e-signature"
                       accept="image/*,application/pdf" required>
              </div>


              <!-- Submit -->
              <button type="submit" class="btn btn-primary w-100 py-2">Submit</button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
